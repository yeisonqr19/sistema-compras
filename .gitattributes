# Establecer line endings consistentes
* text=auto eol=lf

# Archivos de código siempre con LF
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf

# Archivos de shell y configuración
*.sh text eol=lf
*.env text eol=lf

# No tocar archivos binarios
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.pdf binary
*.zip binary
*.gz binary
*.mp4 binary
*.webm binary

# Evitar problemas con fuentes de FontAwesome o Bootstrap
static/base/vendor/** text eol=lf